set terminal png

set title "Number of words"
set output "words.png"
plot "graph" index 0:0:1 with boxes fill pattern 3

set title "Number of words - cropped - up to fifty words"
set output "words_upto200.png"
plot [:200][] "graph" index 0:0:1 with boxes fill pattern 3

set title "Number of errors"
set output "errors.png"
plot "graph" index 1:1:1 with boxes fill pattern 3

set title "Number of errors - cropped - up to thirty errors"
set output "errors_upto30.png"
plot [:30][] "graph" index 1:1:1 with boxes fill pattern 3

set title "Error rate"
set output "error_rate.png"
plot "graph" index 2:2:1 with boxes fill pattern 3

set title "Error rate - cropped - up to 0.2 error rate"
set output "error_rate_upto0.2.png"
plot [:0.2][] "graph" index 2:2:1 with boxes fill pattern 3
